body, h1, h2, h3, h4, h5, h6, p, blockquote, dl, dt, dd, ul, ol, li, a, span, i, b, form, fieldset, legend, button, input, textarea, th, td
    margin 0
    padding 0

ul
    list-style none

.logo,.slogan,.icon_iphone,.openTri_R
     background url('../images/icon_head.png') no-repeat

.head__pic-pre,.head__pic-next
    background url('../images/icon_index.png') no-repeat

a
    text-decoration none
    outline none
    cursor pointer
.iconfont
    font-size 0.5555rem !important
.xiaozhu
    width 100%
    overflow hidden
    .head
        margin 0
        padding 0
        position relative
        &__banner
            width 100%
            height 11.1111rem
            position relative
            .banner__li
                position absolute
                top 0
                left 0
        &__head-bar
            position absolute
            top 0
            padding 0.574rem 0.3703rem 0
            box-sizing border-box
            width 100%
            .head-bar__con
                height 1.1666rem
                .logo
                    display block
                    width 2.3703rem
                    height 1.1296rem
                    float left
                .slogan
                    display block
                    width 2.3888rem
                    height 0.3148rem
                    float left
                    background-position 0 -440px
                    margin 0.3148rem 0 0 0.3703rem
                .nav-R
                    float right
                    font-size 0.2592rem
                    font-family "microsoft yahei"
                    display flex
                    li
                        color #ffffff
                        height 0.8148rem
                        line-height 0.8148rem
                        a
                            text-decoration none
                            color #ffffff
                            padding 0 0.1851rem
                            display inline-block
                        .openTri_R
                            padding-right 0.2592rem
                            margin-right 0.3703rem
                            background-position right -118px
                        .icon_iphone
                            padding-left 0.4444rem
                            padding-right 0.4444rem
                            background-position 0 -118px
                        .btn_free
                            width 2.3703rem
                            background-color #1abc9c
                            text-align center
                            font-size 0.3333rem
                            opacity 0.9
                            &:hover
                                background-color #1aaa88
        &__pic-pre
            width 0.9259rem
            height 1.8518rem
            display inline-block
            position absolute
            top 50%
            transform translate(0.9259rem/2,-1.8518rem/2)
            cursor pointer
        &__pic-next
            width 0.9259rem
            height 1.8518rem
            display inline-block
            position absolute
            top 50%
            right 0
            transform translate(-0.9259rem/2,-1.8518rem/2)
            background-position 0 -115px
            cursor pointer
        &__search
            width 17.4074rem
            position absolute
            bottom 0.7407rem
            left 50%
            transform translateX(-17.4074rem/2)
            display flex
            div
                flex 1
            .where
                height 1.1111rem
                background-color #ffffff
                margin-right 2px
            .date
                background-color #ffffff
                margin-right 2px
            .search-btn
                width 3.3333rem
                flex 0 0 auto
                color #ffffff
                position relative
                .btn_pink_search
                    width 100%
                    background-color #F16B80
                    border none
                    font-size 0.474rem
                    color #ffffff
                    font-family "microsoft yahei"
                    cursor pointer
                    padding-left 0.6666rem
                    text-align left 
                    height 100%
                    &:hover 
                        background-color #E64966
                span
                    position absolute
                    top 0
                    right 0
            .icon_place_box
                width 1.0185rem
                height 1.1111rem
                display inline-block
                float left 
                text-align center
                padding-top 0.23rem
                box-sizing border-box
                cursor text
            .ipt_search
                width 5.791rem
                height 0.5555rem
                margin 0.2777rem 0
                padding-right 0.1851rem
                border none
                color #2c3e50
                font-size 0.33333rem
                font-family "microsoft yahei"
                float left
            

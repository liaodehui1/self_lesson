body, h1, h2, h3, h4, h5, h6, p, blockquote, dl, dt, dd, ul, ol, li, a, span, i, b, form, fieldset, legend, button, input, textarea, th, td
    margin 0
    padding 0

ul
    list-style none

.logo,.slogan,.icon_iphone,.openTri_R
     background url('../images/icon_head.png') no-repeat

.head__pic-pre,.head__pic-next
    background url('../images/icon_index.png') no-repeat

a
    text-decoration none
    outline none
    cursor pointer
.iconfont
    font-size 1.875rem !important
.nomargin
    margin none !important
.city-top
    top 0
@media (max-width 768px)
    html
        font-size 6px !important
@media (min-width 768px) and (max-width 980px)
    html
        font-size 8px !important
@media (min-width 980px) and (max-width 1200px)
    html
        font-size 13px !important
@media (min-width 1200px)
    html
        font-size 16px !important
.xiaozhu
    width 100%
    // overflow hidden
    .head
        margin 0
        padding 0
        position relative
        &__banner
            width 100%
            height 34.9375rem
            position relative
            overflow hidden
            .banner__li
                position absolute
                top 0
                left 0
            &:before
                content ''
                display inline-block
                position absolute
                z-index 2
                top 0
                width 100%
                height 12.5rem
                background url(../images/bg_repeat.png) repeat-x
                opacity 0.6
            &:after
                content ''
                display inline-block
                position absolute
                z-index 2
                bottom 0
                width 100%
                height 9.25rem
                background url(../images/bg_repeat.png) repeat-x
                background-position: 0 -210px;
                opacity 0.6
        &__head-bar
            position absolute
            top 0
            z-index 3
            padding 1.9375rem 1.25rem 0
            box-sizing border-box
            width 100%
            .head-bar__con
                height 3.9372rem
                .logo
                    display block
                    width 8rem
                    height 3.8124rem
                    float left
                .slogan
                    display block
                    width 8rem
                    height 1.0624rem
                    float left
                    background-position 0 -440px
                    margin 1.0624rem 0 0 1.0624rem
                .nav-R
                    float right
                    font-size 0.8748rem
                    font-family "microsoft yahei"
                    li
                        color #ffffff
                        height 2.75rem
                        line-height 2.75rem
                        float left
                        a
                            text-decoration none
                            color #ffffff
                            padding 0 0.6247rem
                            display inline-block
                        .openTri_R
                            padding-right 0.8748rem
                            margin-right 1.25rem
                            background-position right -118px
                        .icon_iphone
                            padding-left 1.5rem
                            padding-right 1.5rem
                            background-position 0 -118px
                        .btn_free
                            width 8rem
                            background-color #1abc9c
                            text-align center
                            font-size 1.125rem
                            opacity 0.9
                            &:hover
                                background-color #1aaa88
        &__pic-pre
            width 3.125rem
            height 6.25rem
            display inline-block
            position absolute
            top 50%
            transform translate(3.125rem/2,-6.25rem/2)
            cursor pointer
        &__pic-next
            width 3.125rem
            height 6.25rem
            display inline-block
            position absolute
            top 50%
            right 0
            transform translate(-3.125rem/2,-6.25rem/2)
            background-position 0 -115px
            cursor pointer
        &__search
            width 58.75rem
            position absolute
            bottom 2.5rem
            display flex
            z-index 3
            left 50%
            transform translateX(-50%)
            div
                flex 1
            .where
                height 3.75rem
                background-color #ffffff
                margin-right 2px
            .date
                background-color #ffffff
                margin-right 2px
            .search-btn
                width 11.5rem
                flex 0 0 auto
                color #ffffff
                position relative
                .btn_pink_search
                    width 100%
                    background-color #F16B80
                    border none
                    font-size 1.6rem
                    color #ffffff
                    font-family "microsoft yahei"
                    cursor pointer
                    padding-left 2.25rem
                    text-align left 
                    height 100%
                    &:hover 
                        background-color #E64966
                span
                    position absolute
                    top 0
                    right 0
            .icon_place_box
                width 3.4374rem
                height 3.75rem
                display inline-block
                float left 
                text-align center
                padding-top 0.7762rem
                box-sizing border-box
                cursor text
            .ipt_search
                width 19.25rem
                height 1.8748rem
                margin 0.9372rem 0
                padding-right 0.6247rem
                border none
                color #2c3e50
                font-size 1.1248rem
                font-family "microsoft yahei"
                float left
                outline none

.ad-index1
    background-color #0fabfc
    position relative
    a
        display inline-block
        width 100%
        text-align center
.theme
    padding 2.625rem 0
    &__title
        font-size 2.75rem
        color #445566
        display block
        text-align center
        padding-bottom 0.9375rem
        box-sizing border-box
    &__content
        text-align center
        font-size 1.125rem
        color #959ea7
.rooms-show
    .roomList
        width 60rem
        margin 0 auto
        padding 0 0.625rem 3.125rem
        .room
            float left
            position relative
            margin 0 0.875rem 0.875rem 0
            font-size 0
            .city-img
                width 38.875rem
            &__img
                width 19rem
                height 15.5rem
            .img-cover
                width 100%
                height 100%
                position absolute
                background-color #000
                transform translateY(-100%)
                opacity 0.2
            &__intro
                position absolute
                bottom 0
                width 100%
                text-align center
                color #ffffff
                font-size 1.125rem
                .user-fd
                    width 3.125rem
                    height 3.125rem
                    border 2px solid #ffffff
                    border-radius 50%
                .room-name
                    width 16.75rem
                    padding 0.625rem 0
                    display inline-block
                    white-space nowrap
                    text-overflow ellipsis
                    overflow hidden
                .price
                    display inline-block
                    height 1.875rem
                    line-height 1.875rem
                    background-color #000000
                    opacity 0.6
                    padding 0 1rem
                    box-sizing border-box
            &__hover:hover
                box-shadow 0 0 6px #bbb
                padding 0.625rem
                left -0.625rem
                top -0.625rem
        &:after
            content ''
            clear both
            display block
.our-credit
    &__content
        width 60rem
        margin 0 auto
        padding 0 0.625rem 3.125rem
        display flex
        .jz
            flex 1
            padding 1.25rem 1.5625rem
            border-right 1px solid #ECF0F1
            position relative
            &__img
                background url(../images/jz.png) no-repeat
                display inline-block
                width 11.75rem
                height 9.5rem
                for n in 0 1 2 3
                    &.jz__img{n+1}//单独bp设置无效，需要利用span样式
                        background-position:0 -162px * n
            &:last-child
                border-right none
            &__hover:hover
                box-shadow 0 0 6px #bbb
.room__hover,.jz__hover
    display block
    width 100%
    height 100%
    position absolute
    top 0
    left 0
    z-index 9